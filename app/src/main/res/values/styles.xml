<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeSplash" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme27" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimaryBlack</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="dividerColor">@color/dividerLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme27">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="dividerColor">@color/dividerDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="AppThemeDark.NoActionBar" parent="AppThemeDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeBlack" parent="AppThemeDark">
        <item name="colorSurface">@color/colorPrimaryBlack</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="AppThemeBlack.NoActionBar" parent="AppThemeBlack">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemePatch">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorPrimaryDark">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="actionBarTheme">@style/AppThemeActionBarTheme</item>
        <item name="actionBarStyle">@style/AppThemeActionBarStyle</item>
        <item name="materialButtonStyle">@style/AppThemeButton</item>
        <item name="checkboxStyle">@style/AppThemeCheckbox</item>
        <item name="android:switchStyle">@style/AppThemeSwitch</item>
        <item name="bottomSheetDialogTheme">@style/AppThemeBottomSheetDialog</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:listDivider">@null</item>
        <item name="sliderStyle">@style/AppThemeSliderStyle</item>
    </style>

    <style name="AppThemePatchDark" parent="AppThemePatch">
        <item name="android:colorBackground">@color/gray</item>
    </style>

    <style name="AppThemeSliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="thumbRadius">6dp</item>
    </style>

    <style name="AppThemeActionBarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppThemeActionBarStyle" parent="@style/Widget.MaterialComponents.ActionBar.Surface">
        <item name="elevation">4dp</item>
    </style>

    <style name="AppThemeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="iconPadding">@dimen/drawable_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppThemeCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="AppThemeSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:switchMinWidth">64dp</item>
        <item name="android:track">@drawable/theme_switch_track</item>
        <item name="android:thumb">@drawable/theme_switch_thumb</item>
        <item name="android:showText">false</item>
    </style>

    <style name="AppThemeBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">16dp</item>
    </style>
</resources>
